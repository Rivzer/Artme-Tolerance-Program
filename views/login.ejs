<!DOCTYPE html>
<html lang="nl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inloggen</title>
    <link rel="stylesheet" href="/css/login.css">
</head>

<body>
    <div class="login-box">
        <div class="language-select">
            <select id="language-select">
                <option value="nl" <%=currentLanguage==='nl' ? 'selected' : '' %>>Nederlands</option>
                <option value="en" <%=currentLanguage==='en' ? 'selected' : '' %>>English</option>
                <option value="de" <%=currentLanguage==='de' ? 'selected' : '' %>>Deutsch</option>
            </select>
        </div>

        <h1 id="login-title">
            <%= getTranslation('loginTitle') %>
        </h1>
        <form action="/login" method="POST">
            <input type="password" name="password" id="password-input"
                placeholder="<%= getTranslation('passwordPlaceholder') %>" required>
            <button type="submit" id="login-button">
                <%= getTranslation('loginButton') %>
            </button>
        </form>
        <% if (typeof error !=='undefined' && error) { %>
            <p class="error">
                <%= getTranslation('errorMessage') %>
            </p>
            <% } %>
    </div>

    <script src="js/language.js"></script>
</body>

</html>